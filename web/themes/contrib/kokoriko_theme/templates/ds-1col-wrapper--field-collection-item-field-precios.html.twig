<div class="content row">
  {% for field in content.ds_content %}
      {% if field[0]['#markup'] %}
      <div class="small-6 {{ field['#label_display'] == 'hidden' ? 'small-centered' : 'medium-uncentered' }}  columns">
        <div class ="large-12 medium-12 field">
         <span class="field-price">
           $ {{ field[0]['#markup'] | number_format(0, '.') }}
         </span>
        </div>
        <div class ="large-12 medium-12 field">
         <span class="field-label">
          {% if field['#label_display'] != 'hidden' %}
            {{field['#title']}}
          {% endif %}
         </span>
        </div>
      </div>
      {% endif %}
  {% endfor %}
</div>
